# ============================================================
# Art Director MCP â€” Configuration
# Copy to .env and fill in your API keys
# ============================================================

# --- Planner LLM (OpenAI-compatible endpoint) ---------------
# Any OpenAI-compatible API works: OpenAI, Azure, Anthropic via proxy,
# Together AI, Groq, local vLLM/Ollama, NVIDIA NIM, etc.
ART_DIRECTOR_PLANNER_API_KEY=sk-...
ART_DIRECTOR_PLANNER_BASE_URL=https://api.openai.com/v1
ART_DIRECTOR_PLANNER_MODEL=gpt-4o

# --- Hugging Face Inference ----------------------------------
ART_DIRECTOR_HF_API_TOKEN=hf_...

# --- Critic VLM (OpenAI-compatible vision endpoint) ----------
# Can point to HF Inference, NVIDIA NIM, OpenAI, etc.
ART_DIRECTOR_CRITIC_API_KEY=sk-...
ART_DIRECTOR_CRITIC_BASE_URL=https://api.openai.com/v1
ART_DIRECTOR_CRITIC_MODEL=gpt-4o-mini

# --- NVIDIA NIM (optional, for Kimi k2.5 / NIM models) ------
ART_DIRECTOR_NIM_API_KEY=nvapi-...
ART_DIRECTOR_NIM_BASE_URL=https://integrate.api.nvidia.com/v1

# --- CLIP Fast-Path (optional) -------------------------------
ART_DIRECTOR_CLIP_ENABLED=true
ART_DIRECTOR_CLIP_MODEL=openai/clip-vit-large-patch14
ART_DIRECTOR_CLIP_THRESHOLD_PASS=0.82
ART_DIRECTOR_CLIP_THRESHOLD_FAIL=0.55

# --- Pipeline Budgets ----------------------------------------
ART_DIRECTOR_MAX_RETRIES=3
ART_DIRECTOR_MAX_WALL_CLOCK_SECONDS=300
ART_DIRECTOR_MAX_COST_USD=1.00
ART_DIRECTOR_DEFAULT_WIDTH=1024
ART_DIRECTOR_DEFAULT_HEIGHT=1024

# --- Server --------------------------------------------------
ART_DIRECTOR_TRANSPORT=streamable-http
ART_DIRECTOR_HOST=0.0.0.0
ART_DIRECTOR_PORT=8000
ART_DIRECTOR_LOG_LEVEL=INFO

# --- Storage -------------------------------------------------
ART_DIRECTOR_OUTPUT_DIR=./generated

# --- Dedicated Endpoint Overrides (optional) -----------------
# Map model IDs to dedicated endpoint URLs.
# Format: JSON dict {"model_id": "https://endpoint-url"}
# ART_DIRECTOR_DEDICATED_ENDPOINTS={"black-forest-labs/FLUX.1-dev": "https://my-flux-endpoint.endpoints.huggingface.cloud"}
